body
	font-family 'Source Sans Pro'
	font-weight 200
	color #333
	background #333

.site
	margin-top 3px
	background #FFF

h1, h2
	font-weight 400

header.main
	font-size 15px
	font-style
	width 100%
	max-width 760px
	margin 0 auto
	padding 55px 0 0
	text-align center
	h1
		font-weight 200
		float left
		padding-top 5px
	nav
		float right
		padding-top 5px
		li
			display inline-block
			margin-left 30px
			a
				text-decoration none
				color #333
				&:hover
					text-decoration none
			&.selected
				color #4987D5
#content
	clear both
	max-width 760px
	width 100%
	margin auto
	min-height 400px
	-webkit-transition height 1s ease-in
	& > section
		padding-top 100px
		padding-bottom 200px
		h2
			font-size 60px
			font-weight 200
			font-style italic
#designs
	ul
		list-style none
		text-align center
	li
		display inline-block
		margin 20px
		box-shadow 0 0 2px rgba(0,0,0,0.8)
		height 158px
		a
			display block
			position relative
			color #333
			text-align left
			.details
				display none
				position absolute
				width 100%
				height 100%
				top 0
				left 0
				background rgba(255,255,255,0.8)
			h3
				font-weight 400
				position absolute
				bottom 0
				left 0
				padding 20px
				font-size 36px
			&:hover .details
				display block
	img
		border none
#design
	padding-left 222px
	position relative
	aside
		position absolute
		left 0
		top 100px
	header, & .description
		margin-bottom 20px
	ul.gallery
		list-style none
		li
			display inline-block
			margin 5px
			a
				display block
				width 100px
				height 100px
				background-size cover
				background-position center
				box-shadow 0 0 2px rgba(0,0,0,0.8)
#code
	ul
		list-style none
		li
			display inline-block
			width 50%
			min-width 200px
			padding 20px 30px
			box-sizing border-box
			vertical-align top
			a
				color #4987D5
				text-decoration none
				font-weight 400
				font-size 22px
				&:hover
					text-decoration underline
	header
		margin-bottom 5px
	.description
		margin-bottom 5px
	.updated
		font-size 12px
			