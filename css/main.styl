main-text-shadow()

html
	height 100%
	background-color #1A1A1A

body
	font-family 'edmondsans'

	& > header
		position absolute
		top 20%
		width 100%
		hgroup
			width 150px
			height 105px
			background url('../img/moon.svg') no-repeat
			background-size contain
			padding-top 45px
			position relative
			margin 0 auto 120px
			h1
				font-weight bold
				font-size 36px
				text-transform uppercase
				text-align center
				color #333
				margin-bottom -2px
			h2
				font-weight bold
				font-size 17px
				text-transform uppercase
				text-align center
				color #333
		nav ul
			text-align center
			li
				display inline-block
				text-transform uppercase
				margin-right 95px
				width 74px
				text-align center
				a
					color #FFF
					text-decoration none
					font-size 21px
			li:last-child
				margin-right 0
#clouds
	position absolute
	height 154px
	width 100%
	bottom 0
	.cloud
		background-image url(../img/clouds.svg)
		background-repeat repeat-x
		background-position 0 0
		width 100%
		height 100%
		position absolute
		bottom 0
		&:first-child
			-webkit-animation moveCloudFront 12s linear infinite
			height 94px
			opacity 0.9
		&:nth-child(2)
			-webkit-animation moveCloudFront 26s linear infinite
			height 104px
			opacity 0.8
		&:last-child
			-webkit-animation moveCloudFront 40s linear infinite
			height 134px
			opacity 0.7
