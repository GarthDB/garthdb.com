main-text-shadow()

html
	height 100%
	background-color #1A1A1A

body
	font-family 'edmondsans'

	& > header
		position absolute
		top 20%
		width 100%
		hgroup
			width 150px
			height 105px
			background url('../img/moon.svg') no-repeat
			background-size contain
			padding-top 45px
			position relative
			margin 0 auto 120px
			h1
				font-weight bold
				font-size 36px
				text-transform uppercase
				text-align center
				color #333
				margin-bottom -2px
			h2
				font-weight bold
				font-size 17px
				text-transform uppercase
				text-align center
				color #333
		nav ul
			text-align center
			li
				display inline-block
				text-transform uppercase
				margin-right 40px
				width 74px
				text-align center
				a
					color #FFF
					text-decoration none
					font-size 21px
					&:hover
						color #DDD
			li:last-child
				margin-right 0
#clouds
	pointer-events none
	position absolute
	height 154px
	width 100%
	bottom 0
	.cloud
		background-image url(../img/clouds.svg)
		background-repeat repeat-x
		background-position 0 0
		width 100%
		height 100%
		position absolute
		bottom 0
		&:first-child
			-webkit-animation moveCloudFrontOne 24s linear infinite
			height 94px
			opacity 0.9
		&:nth-child(2)
			-webkit-animation moveCloudFrontTwo 52s linear infinite
			height 104px
			opacity 0.8
		&:last-child
			-webkit-animation moveCloudFrontThree 80s linear infinite
			height 124px
			opacity 0.7



@-webkit-keyframes moveCloudFrontOne
	from
		background-position 0px 0px
	to
		background-position 1280px 0px

@-webkit-keyframes moveCloudFrontTwo
	from
		background-position 300px 0px
	to
		background-position 1580px 0px

@-webkit-keyframes moveCloudFrontThree
	from
		background-position 600px 0px
	to
		background-position 1880px 0px

@media screen and (min-width: 481px) and (max-width: 570px) and (max-height: 500px)
	body header
		top 10%
		hgroup
			margin 0 auto 20px
	#clouds .cloud
		&:first-child
			opacity 0.3
			height 54px
		&:nth-child(2)
			opacity 0.2
			height 69px
		&:last-child
			opacity 0.1
			height 84px

@media screen and (max-width: 480px)
	body header
		top 15%
		hgroup
			margin 0 auto 80px
		nav ul li
			margin-right 20px